{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "c_clang_debug",
            "group": "build",
            "type": "shell",
            "command": "clang",
            "args": [
                "${workspaceFolder}/examples/rainbow/main.c",

                "${workspaceFolder}/src/color.c",
                "${workspaceFolder}/src/core.c",
                "${workspaceFolder}/src/graphics.c",
                "${workspaceFolder}/src/layer.c",
                "${workspaceFolder}/src/log.c",
                "${workspaceFolder}/src/scene.c",
                "${workspaceFolder}/src/sprite.c",
                
                "-L${workspaceFolder}/lib",
                "-lUser32",
                "-lGdi32",
                "-lShell32",
                "-lglfw3_mt",
                "-lopengl32",
                "-lglew32s",
                
                "-Wall",
                "-Wno-deprecated-declarations",
                
                "-g",
                "-O0",
                "-DDEBUG",
                "-I${workspaceFolder}/inc",
                "-o${workspaceFolder}/out/${workspaceFolderBasename}.exe"
            ],
            "dependsOn": [],
            "problemMatcher": [],
        },
        {
            "label": "c_clang_release",
            "group": "build",
            "type": "shell",
            "command": "clang",
            "args": [
                "${workspaceFolder}/examples/rainbow/main.c",

                "${workspaceFolder}/src/color.c",
                "${workspaceFolder}/src/core.c",
                "${workspaceFolder}/src/graphics.c",
                "${workspaceFolder}/src/layer.c",
                "${workspaceFolder}/src/log.c",
                "${workspaceFolder}/src/scene.c",
                "${workspaceFolder}/src/sprite.c",
                
                "-L${workspaceFolder}/lib",
                "-lglfw3_mt",
                "-lUser32",
                "-lGdi32",
                "-lShell32",
                "-lopengl32",
                "-lglew32s",
                
                "-Wall",
                "-Wno-deprecated-declarations",

                "-O2",
                "-I${workspaceFolder}/inc",
                "-o${workspaceFolder}/out/${workspaceFolderBasename}.exe"
            ],
            "dependsOn": [],
            "problemMatcher": [],
        }
    ]
}